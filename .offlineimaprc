[general]
accounts = UnivCS

[Account UnivCS]
localrepository = LocalCS
remoterepository = RemoteCS

[Account nipl]
localrepository = Localnipl
remoterepository = Remotenipl

[Repository LocalCS]
type = Maildir
localfolders = ~/Mail/UnivCS

[Repository RemoteCS]
type = IMAP
ssl = yes
remotehost = mail.cs.helsinki.fi
remoteuser = hendry
#folderfilter = lambda foldername: foldername in ['inbox', 'Sent']
folderfilter = lambda foldername: re.search('(^INBOX\.inbox\..+|^INBOX\.Sent\..+|INBOX$)', foldername)

[Repository Localnipl]
type = Maildir
localfolders = ~/Mail/nipl

[Repository Remotenipl]
type = IMAP
ssl = yes
remotehost = nipl.net
remoteuser = hendry
folderfilter = lambda foldername: re.search('^INBOX$', foldername)

##################################################
# Mailbox name recorder
##################################################

[mbnames]

# offlineimap can record your mailbox names in a format you specify.
# You can define the header, each mailbox item, the separator,
# and the footer.  Here is an example for Mutt.
# If enabled is yes, all six setting must be specified, even if they
# are just the empty string "".
#
# The header, peritem, sep, and footer are all Python expressions passed
# through eval, so you can (and must) use Python quoting.

enabled = yes
filename = ~/Mail/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
