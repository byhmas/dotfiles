# $Id$

#DEFAULT="$HOME/Maildir"
logfile $HOME/.maildroplog

# Filter for Enemies of Carlotta(EoC) mailing list mails
SENDER=$FROM
/^(To|Cc):.*/
RECIPIENT=getaddr($MATCH)

`enemies-of-carlotta --name=$RECIPIENT --is-list`
if ( $RETURNCODE == 0 )
{
        to "|enemies-of-carlotta --incoming"
}

# Else forward mail to my spam filter, Gmail
to "!kai.hendry@gmail.com"
