startup_message off
# UTF-8 everywhere
defutf8 on
# restore window contents after using (e.g.) vi
altscreen on
# bigger scroll back buffer
defscrollback 10000
# nice display on the bottom of the page to show selected screens
hardstatus alwayslastline "%{kw} %{b}%H%{K}    < %-w%{Wb} %n %t %{-}%+w >"
