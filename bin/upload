#!/bin/bash
u=$(mktemp -u)
d=$(date --rfc-3339=date)
mkdir -p $u/$d
trap "rm -rf $u" EXIT

for s in "$@"
do
if ! test -f "$s"
then
	echo Missing filename $s >&2
	continue
fi

chmod +r "$s"

if test "${s##*.}" == "png"
then
	pngquant --ext .png -f "$s"
fi

cp -v "$s" "$u/$d/$(basename "$s")"
logger "http://s.natalian.org/$d/$(basename "$s")"
echo "http://s.natalian.org/$d/$(basename "$s")" | xclip -selection "clipboard" -i
done

s3cmd -P sync $u/ s3://s.natalian.org/
