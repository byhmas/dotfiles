#!/bin/bash
u=$(mktemp -u)
d=$(date --rfc-3339=date)
mkdir -p $u/$d
trap "rm -rf $u" EXIT

for s in "$@"
do
if ! test -f "$s"
then
	echo Missing filename $s >&2
	continue
fi

if test "${s##*.}" == "png"
then
	t=$(mktemp -u).png
	pngcrush -q $s $t
	mv $t $s
fi

cp -v $s $u/$d/$(basename $s)
logger http://s.natalian.org/$d/$(basename $s)
done

rsync -rvz $u/ s.natalian.org:/srv/www/s.natalian.org/
